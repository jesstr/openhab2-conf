rule "Pump_1 timestamp"
when
    Item Pump_1 changed to ON
then
    Timestamp_Pump_1.postUpdate(new DateTimeType())
end

rule "Pump_1 off"
when
    Item Pump_1 changed to ON
then
	Thread::sleep(((Duration_Pump_1.state as DecimalType).floatValue * 1000 * 60).intValue)
	Pump_1.sendCommand(OFF)
end


